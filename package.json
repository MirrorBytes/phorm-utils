{
  "name": "@phorm-utils/mono",
  "private": true,
  "license": "ISC",
  "author": {
    "name": "MirrorBytes <Bob>"
  },
  "homepage": "https://github.com/MirrorBytes/phorm-utils",
  "repository": {
    "type": "git",
    "url": "https://github.com/MirrorBytes/phorm-utils"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn patch-package",
    "toc": "yarn workspaces run toc",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test",
    "build": "./scripts/build.sh",
    "validate": "npm-run-all lint build test",
    "lerna:publish": "yarn validate && yarn lerna publish -y -m \"chore(release): release packages\""
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn validate",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "README.md": [
      "yarn toc"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
